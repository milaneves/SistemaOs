@model IEnumerable<SistemaOS.Models.OrdemServico>

@{ ViewData["Title"] = "Consultar Transações"; }

<h2>Consultar</h2>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

<div class="row botao-consultar-novo mt-4">
    <div class="col-lg-12">
        <a class="btn btn-primary" href="@Url.Action("Cadastrar", "OrdemServico")">
            Novo Cadastro
        </a>

    </div>
</div>
@using (Html.BeginForm("ConsultarOrdem", "OrdemServico", FormMethod.Post))
{
<div style="text-align: center;">
    <input type="search" align="center" size="25" name="numeroOs" placeholder="informe o numero da ordem">
    <input type=submit class="btn btn-light" value=Procurar>
</div>
    <br />
    <br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().NumeroOS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().TituloServico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().NomeCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Valor)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroOS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TituloServico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>

                <td>
                    <div class="text-center">
                        <a class="btn btn-danger" href="@Url.Action("Deletar", "OrdemServico", new { id = item.Id })">Excluir</a>
                        <a class="btn btn-warning" href="@Url.Action("Editar", "OrdemServico", new { id = item.Id })">Editar</a>
                        <a class="btn btn-primary" href="@Url.Action("Detalhes", "OrdemServico", new { id = item.Id })">Detalhes</a>
                    </div>
                </td>
            </tr>}

       </tbody>
</table>}

